<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/white"
    android:layout_marginTop="1dp"
    android:layout_marginBottom="1dp"
    android:layout_marginStart="2dp"
    android:layout_marginEnd="10dp"
    app:cardPreventCornerOverlap="true"
    app:contentPadding="5dp"
    app:cardCornerRadius="25dp"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <ImageView
            android:id="@+id/product_image"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:src="@drawable/suadera1"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            >
        </ImageView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/coment_card"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="Titulo"
                android:textSize="18dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:padding="5dp"


                >
            </TextView>

            <TextView
                android:id="@+id/product_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:text="Descripcion"


                android:textAppearance="?attr/textAppearanceBody2"></TextView>
            <TextView
                android:id="@+id/idproductotarjeta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1"
                android:visibility = "gone"
                ></TextView>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/VerArtiInicio"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="2dp"
                android:text="Ver Articulo"
                app:backgroundTint="@color/black"
                app:cornerRadius="40dp"></com.google.android.material.button.MaterialButton>
        </LinearLayout>

    </LinearLayout>


</com.google.android.material.card.MaterialCardView>